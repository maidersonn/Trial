{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "noEmit": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".nyc_output",
    ".git"
  ],
  "include": [
    "src",
    "test",
    "types"
  ]
}
